{
	"typescript.tsdk": "node_modules/typescript/lib",
	"files.eol": "\n",
	"[css]": {
		"editor.defaultFormatter": "dbaeumer.vscode-eslint",
		"editor.formatOnSave": true
	},
	"[github-actions-workflow]": {
		"editor.defaultFormatter": "redhat.vscode-yaml",
		"editor.formatOnSave": true
	},
	"[gitignore]": {
		"editor.defaultFormatter": "dbaeumer.vscode-eslint",
		"editor.formatOnSave": true
	},
	"[json]": {
		"editor.defaultFormatter": "dbaeumer.vscode-eslint",
		"editor.formatOnSave": true,
		"editor.quickSuggestions": { "strings": true },
		"editor.suggest.insertMode": "replace"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "dbaeumer.vscode-eslint",
		"editor.formatOnSave": true,
		"editor.quickSuggestions": { "strings": true },
		"editor.suggest.insertMode": "replace"
	},
	"[typescript]": {
		"editor.defaultFormatter": "dbaeumer.vscode-eslint",
		"editor.formatOnSave": true
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "dbaeumer.vscode-eslint",
		"editor.formatOnSave": true
	},
	"[yaml]": {
		"editor.defaultFormatter": "redhat.vscode-yaml",
		"editor.formatOnSave": true
	},
	"[grit]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.formatOnSave": true
	},
	"editor.acceptSuggestionOnCommitCharacter": true,
	"editor.acceptSuggestionOnEnter": "on",
	"editor.codeActionsOnSave": {
		"source.addMissingImports": "explicit",
		"source.addMissingImports.ts": "explicit",
		"source.biome": "explicit",
		"source.fixAll.biome": "explicit",
		"source.fixAll.eslint": "explicit",
		"source.organizeImports": "never",
		"source.removeUnusedImports": "explicit"
	},

	"eslint.format.enable": true,
	"eslint.run": "onType",
	"eslint.validate": ["typescript", "typescriptreact", "json", "jsonc", "yaml", "toml", "gitignore", "snippets"],

	"editor.formatOnSave": true,
	"editor.quickSuggestions": {
		"comments": false,
		"other": true,
		"strings": true
	},
	"editor.suggest.snippetsPreventQuickSuggestions": false,

	"luau-lsp.completion.imports.enabled": true,
	"luau-lsp.completion.imports.requireStyle": "auto",
	"luau-lsp.completion.imports.stringRequires.enabled": true,
	"luau-lsp.diagnostics.workspace": false,
	"luau-lsp.fflags.enableNewSolver": true,
	"luau-lsp.fflags.override": {},
	"luau-lsp.inlayHints.functionReturnTypes": true,
	"luau-lsp.inlayHints.hideHintsForErrorTypes": false,
	"luau-lsp.inlayHints.hideHintsForMatchingParameterNames": true,
	"luau-lsp.inlayHints.makeInsertable": true,
	"luau-lsp.inlayHints.parameterNames": "none",
	"luau-lsp.inlayHints.parameterTypes": true,
	"luau-lsp.inlayHints.typeHintMaxLength": 50,
	"luau-lsp.inlayHints.variableTypes": false,
	"luau-lsp.platform.type": "standard",
	"luau-lsp.require.mode": "relativeToFile",
	"luau-lsp.sourcemap.autogenerate": false,
	"luau-lsp.sourcemap.enabled": false,
	"luau-lsp.types.definitionFiles": [],
	"luau.trace.server": "off",
	"luau-lsp.completion.enableFragmentAutocomplete": true
}
